<div class="nested-fields">
  <div class="form-inline">
        <%= f.input :description, label: Meal.human_attribute_name(:description), input_html: { class: 'form-control'},
                    wrapper_html: { class: 'form-group pmd-textfield' } %>
        <%= f.input :schedule_time, as: :string, label: Meal.human_attribute_name(:schedule_time), input_html: { class: 'form-control'},
                wrapper_html: { class: 'form-group pmd-textfield' } %>

        <%= f.input :kind, as: :select, collection: MealKind.to_a, input_html: { class: 'form-control', include_blank: true },
                wrapper_html: { class: 'form-group pmd-textfield' } %>
        <%= link_to_remove_association f, class: "btn btn-danger  pmd-btn-raised pmd-ripple-effect" do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remover
        <% end %>

  </div>
  <div class="meal-options">
    <%= f.simple_fields_for :food_option_meals do |food_option_meal| %>
      <%= render partial: 'food_option_meal_fields', locals: { f: food_option_meal } %>
    <% end %>
    <div class="links">
      <%= link_to_add_association f, :food_option_meals, class: "btn btn-info pmd-btn-raised pmd-ripple-effect" do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar Opções
      <% end %>
    </div>
  </div>
</div>
